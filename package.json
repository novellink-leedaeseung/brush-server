{
  "name": "novelink-brush-server",
  "version": "0.0.0",
  "private": true,
  "type": "commonjs",
  "main": "server.js",
  "bin": "server.js",
  "scripts": {
    "start": "node server.js",
    "build:win": "pkg . --targets node18-win-x64 --output dist/novelink-brush-server.exe",
    "build:win-debug": "pkg . --targets node18-win-x64 --output dist/novelink-brush-server.exe --debug",
    "build:nexe": "nexe server.js -t windows-x64-18.20.4 -o dist/novelink-brush-server-nexe.exe"
  },
  "pkg": {
    "assets": [
      "views/**/*",
      "public/**/*",
      "data/**/*"
    ],
    "outputPath": "dist"
  },
  "dependencies": {
    "async-mutex": "^0.5.0",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "exceljs": "^4.4.0",
    "express": "~4.16.1",
    "fs-extra": "^11.3.2",
    "http-errors": "~1.6.3",
    "morgan": "~1.9.1",
    "pug": "2.0.0-beta11"
  },
  "devDependencies": {
    "pkg": "^5.8.1"
  }
}
